<html>
    <head>
        <title>Colleges</title>
    </head>
    <body class="body">
		<div class="container-small container">
			<div class="row">
				<div class="col-md-12">
					<div id="results" class="row">
						<div class="col-md-4">
							<div class="form-group" style="margin: 0">
								<%= form_tag(colleges_path, :method => "get", id: "search-form", style: "margin: 5px 0 0 2.2%") do %>
								    <%= text_field_tag :search, params[:search], placeholder: "Search Colleges", class: "search" %>
								    <%= submit_tag "Search", :name => nil, class: "submit"%>
								<% end %>
							</div>
						</div>
						

						<%= will_paginate @colleges %>
						<table class="black-border table col-md-12">
							<thead style="background: #D6E4FF">
								<tr>
									<th style="width: 40%">College Name</th>
									<th>Number of Reviews</th>
									<th>Number of Rankings</th>
								</tr>
							</thead>
							<tbody>
								<% @colleges.all.each do |college|%>
                                    <tr>
                                        <td><%= link_to college.name,   college %></td>
                                        <td><%= college.reviews_count %></td>
                                        <td><%= college.rankings_count %></td>
                                    </tr>
                                <%end%>
							</tbody>
						</table>
					</div>
				</div>
			</div> <!-- row -->
		</div>
	</body>
</html>