<html>
  <head>
  <title><%=@user.name %></title>
  </head>

  <body class="body">
    <div class="container container-profile" style="margin: 0 auto">
      <div class="row" style="margin-top: 20px">
        <div class="col-md-6">
          <img src="http://vignette1.wikia.nocookie.net/cswikia/images/2/20/Profile-blank-male.png/revision/latest?cb=20150701175801" width="50%"></img>
        </div>
        
        <div class="col-md-6">
          <h3>Name: <%= @user.name %> </h3>
          <h3>Email: <%= @user.email %> </h3>
          
          <% if @user.admin == false %>
            <h2>Your Review: </h2>
            <% if @user.submitted_review == 0 %>
              <a><%= link_to "Submit a Review",   submit_review_path %></a>
            <% else %>
              <% @reviews.each do |review| %>
    							<% if review.name.eql? @user.name %>
    							  <a><%= link_to "Vew your review", review %></a>
    							<% end %>
  						<% end %>
            <% end %>
            
            <h2>Your Ranking: </h2>
            <% if @user.submitted_ranking == 0 %>
              <a><%= link_to "Submit a Ranking",   submit_ranking_path %></a>
            <% else %>
              <% @rankings.each do |ranking| %>
    							<% if ranking.name.eql? @user.name %>
    							  <a><%= link_to "Vew your ranking", ranking %></a>
    							<% end %>
  						<% end %>
            <% end %> <!-- End of the if statement for user has submittd ranking-->
          <% end %> <!-- End of the if statement for admin user -->
        </div>
      </div>
      <% if @user.admin == false %>
        <%= button_to "Delete", @user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, :class => "btn btn-danger", :style => "width: 100%; margin: 30px auto; font-size: 20px" %>
      <% end %>
    </div> <!-- container -->
  </body>
</html>
