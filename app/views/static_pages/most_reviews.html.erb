<!doctype html>

<html>
	<head>
		<link rel="stylesheet" href="custom.scss">
	<head>

	<body class="body">
		<div class="container-small container" style="background-color: white">
			<div class="row">
				<table class="black-border table">
					<thead style="background: #D6E4FF">
						<tr>
							<th style="width: 25%">Are you Interested?</th>
							<th style="width: 40%">School Name</th>
							<th># Reviews</th>
						</tr>
					</thead>
					<tbody>
						<% @colleges.limit(10).each do |college| %>
  							<tr>
    							<td>Yes   No   Maybe</td>
								<td><a href="#"><%= college.name %></a></td>
								<td><%= college.reviews_count %></td>
  							</tr>
						<% end %>
						</tr>
					</tbody>
				</table>
			</div> <!-- row -->
		</div>
	</body>


</html>