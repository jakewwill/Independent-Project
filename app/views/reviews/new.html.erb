  </head>

  <body class="body">
    <div class="container-small container">
      <h1>Submit a Review</h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(@review) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.label "College Name" %>
            <% options = options_from_collection_for_select(@colleges, 'name', 'name') %>
            <%= f.select :college_name, options, class: 'form-control' %>
            
            <%= f.label "Response:" %>
            <%= f.text_area :question1, class: 'form-control' %>
            
            <%= f.submit "Submit my review", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
